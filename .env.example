# ResumeMatch Environment Configuration
# Copy this file to .env and update the values as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production

# Application Settings
APP_HOST=localhost
APP_PORT=5000
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Security Settings
SESSION_TIMEOUT=86400  # 24 hours in seconds
PERMANENT_SESSION_LIFETIME=86400

# File Upload Settings
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=pdf,doc,docx,txt
MAX_FILE_SIZE=16  # MB

# Database Settings (for future use)
# DATABASE_URL=sqlite:///resumematch.db
# DATABASE_POOL_SIZE=10

# Email Configuration (for future features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@resumematch.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/resumematch.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# NLTK Data Path (optional)
# NLTK_DATA=/path/to/nltk_data

# Performance Settings
TFIDF_MAX_FEATURES=10000
SKILL_EXTRACTION_TIMEOUT=30  # seconds

# Feature Flags
ENABLE_ENHANCED_PROCESSING=True
ENABLE_SKILL_SUGGESTIONS=True
ENABLE_ADMIN_DASHBOARD=True
ENABLE_USER_REGISTRATION=True

# API Configuration (for future use)
# API_RATE_LIMIT=100  # requests per minute
# API_KEY_REQUIRED=False

# Cache Settings (for future use)
# CACHE_TYPE=simple
# CACHE_DEFAULT_TIMEOUT=300  # 5 minutes

# External Services (for future integrations)
# LINKEDIN_API_KEY=your-linkedin-api-key
# INDEED_API_KEY=your-indeed-api-key
# GLASSDOOR_API_KEY=your-glassdoor-api-key
